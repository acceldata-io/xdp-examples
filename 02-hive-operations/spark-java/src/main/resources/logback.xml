<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for immediate output -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Set logging level for Hadoop/Hive to reduce noise -->
    <logger name="org.apache.hadoop" level="WARN"/>
    <logger name="org.apache.hive" level="INFO"/>
    <logger name="org.apache.spark" level="INFO"/>
    <logger name="org.apache.thrift" level="WARN"/>
    
    <!-- Application logging -->
    <logger name="com.example.spark.hive" level="INFO"/>

    <!-- Root logger - console only -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>